{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.com/schemas/loom-program.schema.json",
  "title": "Loom Program (AST v2.1.0)",
  "type": "object",
  "required": [
    "type",
    "name",
    "purposeAndIdentity",
    "modules",
    "version",
    "astVersion"
  ],
  "properties": {
    "type": { "const": "Program" },
    "name": { "type": "string", "minLength": 1 },
    "purposeAndIdentity": {
      "type": "array",
      "minItems": 1,
      "items": { "type": "string", "minLength": 1 }
    },
    "modules": {
      "type": "array",
      "minItems": 1,
      "items": { "$ref": "./loom-module.schema.json" }
    },
    "version": { "type": "string", "pattern": "^\\d+\\.\\d+$" },
    "astVersion": {
      "type": "string",
      "pattern": "^(0|[1-9]\\d*)\\.(0|[1-9]\\d*)\\.(0|[1-9]\\d*)"
    },
    "successCriteria": {
      "type": "array",
      "items": { "type": "string" },
      "default": []
    },
    "examples": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["description"],
        "properties": {
          "description": { "type": "string" },
          "input": { "type": "object" },
          "output": {}
        },
        "additionalProperties": false
      },
      "default": []
    }
  },
  "additionalProperties": false
}
