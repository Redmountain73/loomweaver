{
  "type": "Module",
  "name": "FriendlyHello",
  "version": "0.2",
  "purpose": "Say hello using natural sentences",
  "inputs": [
    {
      "name": "name",
      "resultType": "Text"
    }
  ],
  "outputs": [
    {
      "name": "message",
      "resultType": "Text"
    }
  ],
  "flow": [
    {
      "verb": "Ask",
      "args": {
        "name": "name",
        "default": {
          "type": "String",
          "value": "World"
        }
      }
    },
    {
      "verb": "Make",
      "args": {
        "name": "message",
        "expr": {
          "type": "Binary",
          "op": "+",
          "left": {
            "type": "String",
            "value": "Hello, "
          },
          "right": {
            "type": "Binary",
            "op": "+",
            "left": {
              "type": "Identifier",
              "name": "name"
            },
            "right": {
              "type": "String",
              "value": "!"
            }
          }
        }
      }
    },
    {
      "verb": "Return",
      "args": {
        "expr": {
          "type": "Identifier",
          "name": "message"
        }
      }
    }
  ],
  "tests": [
    {
      "input": {
        "name": "Ada"
      },
      "expectedOutput": "Hello, Ada!"
    },
    {
      "input": {},
      "expectedOutput": "Hello, World!"
    }
  ],
  "astVersion": "2.1.0"
}